<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_payment_fee_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <LinearLayout
        android:id="@+id/fee_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_payment_fee_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Fee: "
            android:textColor="#545454"
            android:textSize="@dimen/global_item_row_text_size" />

        <TextView
            android:id="@+id/select_payment_fee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="$0.00"
            android:textColor="#545454"
            android:textSize="@dimen/global_item_row_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/posting_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fee_container"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_payment_posting_time_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Posting Time: "
            android:textColor="#545454"
            android:textSize="@dimen/global_item_row_text_size" />

        <TextView
            android:id="@+id/select_payment_posting_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2 Days"
            android:textColor="#545454"
            android:textSize="@dimen/global_item_row_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/feature_row_glyph"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true" />

</RelativeLayout>