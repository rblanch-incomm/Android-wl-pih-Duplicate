<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5F5F5"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/bill_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="Comcast XYZ "
                android:textColor="#545454"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bill_created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/16/2017"
                android:textColor="#545454"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/bill_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="$999.99"
            android:textColor="#545454"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:id="@+id/bill_detail_info"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/incl_horizontal_line"></include>

        <TextView
            android:id="@+id/confirmation_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmation Number"
            android:textSize="12sp"
            android:textColor="#999999"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />


        <TextView
            android:id="@+id/confirmation_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textColor="#545454"
            android:paddingRight="16dp"
            android:textSize="15sp"
            android:text="356874597" />


        <include layout="@layout/incl_horizontal_line"></include>

        <TextView
            android:id="@+id/used_on_label"
            android:layout_width="match_parent"
            android:text="Used on"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <TextView
            android:id="@+id/used_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textColor="#545454"
            android:paddingRight="16dp"
            android:text="10/16/17 at 9:58am"
            android:textSize="15sp"

            />

        <include layout="@layout/incl_horizontal_line"></include>

        <TextView
            android:id="@+id/retailer_label"
            android:text="Used at"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>


        <TextView
            android:id="@+id/retailer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family dollar"
            android:textSize="15sp"
            android:textColor="#545454"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <TextView
            android:id="@+id/retailer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:textColor="#545454"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="15sp"
            />

        <include layout="@layout/incl_horizontal_line"></include>

        <TextView
            android:id="@+id/account_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For account"
            android:textSize="12sp"
            android:textColor="#999999"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
             />


        <TextView
            android:id="@+id/account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textColor="#545454"
            android:paddingRight="16dp"
            android:textSize="15sp"
            android:text="356874597" />

        <include layout="@layout/incl_horizontal_line"></include>

        <TextView
            android:id="@+id/summary_label"
            android:text="Summary"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount_label_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#545454"
                    android:layout_weight="4"
                    android:text="Vanilla direct Pay it here" />

                <TextView
                    android:id="@+id/amount_tv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textColor="#545454"
                    android:layout_height="wrap_content"
                    android:text="$0.00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fee_label_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="#545454"
                    android:textSize="15sp"
                    android:text="Fee"/>

                <TextView
                    android:id="@+id/fee_tv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textColor="#545454"
                    android:layout_height="wrap_content"
                    android:text="$0.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_label_tv"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:textColor="#545454"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:text="Total "/>

                <TextView
                    android:id="@+id/total_tv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="#545454"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="$0.00"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/create_new_bill_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bkg_button_big_a_selector"
            android:clickable="true"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/view_receipt_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@id/create_new_bill_button"
            android:layout_gravity="center"
            android:background="@drawable/bkg_button_big_a_selector"
            android:clickable="true"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
