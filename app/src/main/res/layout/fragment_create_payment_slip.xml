<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="com.incomm.payithere.views.CreatePaymentSlip.CreatePaymentSlipFragment">


    <android.support.v7.widget.SearchView
        android:id="@+id/biller_searchView"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:showAsAction="collapseActionView|always"
        android:elevation="2dp">
    </android.support.v7.widget.SearchView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/biller_recycler_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/billers_not_found_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No results found" />

    </LinearLayout>

    <View
        android:background="#d4d4d4"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/categories_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="Go to Categories"
        android:textColor="@android:color/holo_blue_dark" />



</LinearLayout>
