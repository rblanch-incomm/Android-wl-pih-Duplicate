<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GlobalFooterShortcutOuterContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GlobalFooterShortcutInnerContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <!--<item name="android:background">@drawable/global_footer_shortcut_bkg_selector</item>-->
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="GlobalFooterShortcutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
        <!--<item name="android:textColor">@color/global_footer_shortcut_text_selector</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Edittext_entry">
        <item name="android:fontFamily">sans-serif"</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Global2">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EdittextSeperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#bab7b6</item>
    </style>

    <style name="GlobalButtonText" parent="Global2">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/bkg_button_big_a_selector</item>-->
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PasswordSuccessStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="WalkthroughDot">
        <item name="android:layout_width">@dimen/global_slider_dot_width</item>
        <item name="android:layout_height">@dimen/global_slider_dot_height</item>
        <item name="android:layout_margin">@dimen/global_slider_dot_margin</item>
        <item name="android:button">@drawable/getting_started_pageindicator</item>
    </style>

</resources>
